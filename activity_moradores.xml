        <TextView
            android:id="@+id/tvperiodovazio"
            android:text=""

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnmoradorescadastrar"
                android:text="Cadastrar"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

            <Button
                android:id="@+id/btnmoradoresalterar"
                android:text="Alterar"
                app:layout_constraintEnd_toStartOf="@+id/btnmoradoresexcluir"
                app:layout_constraintStart_toEndOf="@+id/btnmoradorescadastrar"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

            <Button
                android:id="@+id/btnmoradoresexcluir"
                android:text="Excluir"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ListView
            android:id="@+id/listviewmostramoradores"
            android:layout_width="match_parent"
            android:layout_height="50000dp" />

