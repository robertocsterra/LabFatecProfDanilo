<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".alimentamural">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txttelaalimentamural"
                android:text="Publicar no Mural"

                android:layout_width="372dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/background_titulo_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/ic_inicio_background"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvmuraltitulo"
            android:text="Titulo da Notícia"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtmuraltitulo"
            android:hint="Informe um titulo para esta notícia"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvmuraldata"
            android:text="Data da Publicação"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtmuraldata"
            android:hint="Informe data."

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvmuraltextonoticia"
            android:text="Texto da Notícia"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtmuraltextodanoticia"
            android:hint=" "

            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />

        <TextView
            android:id="@+id/tvmuralvazio"
            android:text=""

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnpublicamural"
                android:text="Publicar"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

            <Button
                android:id="@+id/btnmuralalterar"
                android:text="Alterar"
                app:layout_constraintEnd_toStartOf="@+id/btnmuralexcluir"
                app:layout_constraintStart_toEndOf="@+id/btnpublicamural"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

            <Button
                android:id="@+id/btnmuralexcluir"
                android:text="Excluir"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ListView
            android:id="@+id/listviewmostratextomural"
            android:layout_width="match_parent"
            android:layout_height="50000dp"
            android:text=" " />

    </LinearLayout>

</ScrollView>


