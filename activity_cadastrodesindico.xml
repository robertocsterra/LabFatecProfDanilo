<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".cadastrodesindico">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvsindicotitulo"
                android:text="Cadastro de SÃ­ndico"

                android:layout_width="372dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/background_titulo_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/ic_inicio_background"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvsindiconome"
            android:text="Nome"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtsindiconome"
            android:hint="Nome"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvsindicocpf"
            android:text="CPF"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtsindicocpf"
            android:hint="CPF"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvsindicorg"
            android:text="RG"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtsindicorg"
            android:hint="RG"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvsindicotelefone"
            android:text="Telefone"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtsindicotelefone"
            android:hint="Telefone"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvsindicoemail"
            android:text="E-mail"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtsindicoemail"
            android:hint="e-mail"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvsindicosenha"
            android:text="Senha"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtsindicosenha"
            android:hint="Senha"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvsindicoinicio"
            android:text="Data inicio"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtsindicoinicio"
            android:hint="Data"

            android:inputType="textPersonName"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvsindicofinal"
            android:text="Data final"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtsindicofinal"
            android:hint="Data"

            android:inputType="textPersonName"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />

        <TextView
            android:id="@+id/tvcadsindvazio"
            android:text=""

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnsindicocadastrar"
                android:text="Cadastrar"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

            <Button
                android:id="@+id/btnsindicoalterar"
                android:text="Alterar"
                app:layout_constraintEnd_toStartOf="@+id/btnsindicoexcluir"
                app:layout_constraintStart_toEndOf="@+id/btnsindicocadastrar"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

            <Button
                android:id="@+id/btnsindicoexcluir"
                android:text="Excluir"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ListView
            android:id="@+id/listviewmostrasindico"
            android:layout_width="match_parent"
            android:layout_height="50000dp" />

    </LinearLayout>

</ScrollView>