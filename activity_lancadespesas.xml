<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".lancadespesas">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txttelalancadespesas"
                android:text="Lançamento de Despesas"

                android:layout_width="372dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/background_titulo_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/ic_inicio_background"
                android:textSize="18sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvdespesasfornecedor"
            android:text="Fornecedor"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtldespesasfornecedor"
            android:hint="Informe nome do Fornecedor"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvdespesastipo"
            android:text="Tipo de Despesa"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edttipodespesa"
            android:hint="Informe tipo de despesa"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvdespesasdata"
            android:text="Data"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtldespesasdata"
            android:hint="Informe data desta despesa"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvdespesasdescricao"
            android:text="Descrição"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtldespesasdescricao"
            android:hint="Informe detalhe da despesa"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvdespesasvalor"
            android:text="Valor"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtldespesasvalor"
            android:hint="Informe valor da despesa"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />


        <TextView
            android:id="@+id/tvdespesasobs"
            android:text="Observação"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edtldespesasobs"
            android:hint="Informações adicionais"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:background="@drawable/background_campo_gradiente_borda_arredondada"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/ic_inicio_background" />

        <TextView
            android:id="@+id/tvlancdespvazio"
            android:text=""

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/ic_inicio_background"
            android:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnldespesasinserir"
                android:text="Inserir"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

            <Button
                android:id="@+id/btnldespesasalterar"
                android:text="Alterar"
                app:layout_constraintEnd_toStartOf="@+id/btnldespesasexcluir"
                app:layout_constraintStart_toEndOf="@+id/btnldespesasinserir"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

            <Button
                android:id="@+id/btnldespesasexcluir"
                android:text="Excluir"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="0dp"

                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/background_botao_gradiente_borda_arredondada"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ListView
            android:id="@+id/listviewmostraldespesas"
            android:layout_width="match_parent"
            android:layout_height="50000dp"
            android:text=" " />

    </LinearLayout>

</ScrollView>



